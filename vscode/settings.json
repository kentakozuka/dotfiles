{
  "files.exclude": {
    "**/.git": false,
    "**/.project": true,
    "**/.settings": true,
  },
  "workbench": {
    "iconTheme": "material-icon-theme",
  },
  "window": {
    "zoomLevel": -1
  },
  "explorer": {
    "confirmDelete": false,
    "confirmDragAndDrop": false
  },
  "editor": {
    "inlineSuggest.enabled": true,
    "tabSize": 2,
    "lineNumbers": "on",
    "cursorStyle": "line",
    "insertSpaces": false,
    "wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "wordWrap": "off",
    "inlineSuggest": {
      "enabled": true
    },
    "formatOnSave": true,
    "codeActionsOnSave": {
      "source.fixAll": true
    },
    "renderWhitespace": "boundary",
    "cursorBlinking": "solid",
    "minimap.enabled": false,
    "suggestSelection": "first",
    "acceptSuggestionOnCommitCharacter": false
  },
  "vim": {
    "visualModeKeyBindingsNonRecursive": [
      {
        "before": [
          "<space>"
        ],
        "commands": [
          "vspacecode.space"
        ]
      }
    ],
    "useSystemClipboard": true,
    "insertModeKeyBindingsNonRecursive": [
      {
        "before": [
          "<C-f>"
        ],
        "after": [
          "<Right>"
        ]
      }
    ],
    "normalModeKeyBindingsNonRecursive": [
      {
        "before": [
          "<leader>",
          "\\"
        ],
        "commands": [
          ":nohl"
        ]
      },
      {
        "before": [
          "<space>"
        ],
        "commands": [
          "vspacecode.space"
        ]
      }
    ],
    "handleKeys": {
      "<C-d>": true
    }
  },
  "terminal": {
    "integrated": {
      "enableMultiLinePasteWarning": false,
      "macOptionIsMeta": true,
      "profiles.osx": {
        "zsh": {
          "path": "/bin/zsh"
        }
      },
    },
  },
  // Go
  "go": {
    "useLanguageServer": true,
    "toolsManagement.autoUpdate": true,
    "lintTool": "golangci-lint",
    "lintFlags": [
      "--fast",
      "--enable-all",
      "-D wsl"
    ],
    "autocompleteUnimportedPackages": true,
    "languageServerFlags": [
      "-rpc.trace"
    ]
  },
  // Python
  "python": {
    "formatting.provider": "black",
    "insidersChannel": "weekly",
    "analysis.typeCheckingMode": "basic",
  },
  // JS
  "javascript": {
    "updateImportsOnFileMove.enabled": "always"
  },
  "typescript": {
    "updateImportsOnFileMove.enabled": "always"
  },
  "[javascript][typescript][typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  // Java
  "[java]": {
    "editor.defaultFormatter": "redhat.java",
    "project.importOnFirstTimeStartup": "automatic"
  },
  // JSON
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
  },
  // Proto
  "[proto3]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  // C++
  "C_Cpp": {
    "codeFolding": "Disabled",
    "default.cppStandard": "c++17",
    "updateChannel": "Insiders"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "markdown": {
    "extension.toc.updateOnSave": false
  },
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
}